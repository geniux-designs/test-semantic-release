{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NPM_TOKEN", "GITHUB_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "release": {
      "dependsOn": ["^release"],
      "env": ["NPM_TOKEN", "GITHUB_TOKEN"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}